<h1>Booking Event</h1>

<h5>Booking</h5>
<% if @user_booking.nil? %>
<p>No Booking Available</p>
<%end%>

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">User_name</th>
      <th scope="col">Vendor_name</th>
      <th scope="col">Event_name</th>
      <th scope="col">Date</th>
      <th scope="col">Event_name</th>
      <th scope ="col">Price</th>
      <th scope="col">Action</th>

    </tr>
  </thead>
  <tbody>
  <% @user_booking.each do |b|%>
    <tr>
      <th scope="row">1</th>
      <td><%= b.user.fname %></td>
      <td><%= b.vendor.user.fname%>  <%= b.vendor.user.lname%></td>
      <td><%= b.event.name%> </td>
      <td><%= b.event_date%></td>
      <td><%= b.place%></td>
      <td><%= b.subcategory.price%>
      <td><%= button_to "Pay",checkout_create_path(event_name: b.event.name, id: b.subcategory.id),remote: true%></td>
      <td><%= link_to "Show",booking_path(b.id),class: "btn btn-info"%>
      <td><%= link_to "Update",edit_booking_path(b.id),class: "btn btn-info"%>
      
      <td><%= link_to "Delete",booking_path(b.id),method: :delete, class:"btn btn-success"%>
    </tr>
    <%end%>
  </tbody>
</table>
